<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!--
    This section specifies a file with some parameters
    -->

    <properties resource="mybatis/config.properties">
    </properties>

    <!--
    This section describes the properties of the object
    to connect to the data source, and describes the transaction manager
    -->

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${db.driver}"/>
                <property name="url" value="${db.url}"/>
                <property name="username" value="${db.username}"/>
                <property name="password" value="${db.password}"/>
            </dataSource>
        </environment>
    </environments>

    <!--
    This section describes the mappers for entities on SQL queries
    -->

    <mappers>
        <mapper resource="mybatis/DepartmentMapper.xml"/>
        <mapper resource="mybatis/EmployeeMapper.xml"/>
    </mappers>

</configuration>